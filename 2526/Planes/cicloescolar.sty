                ] (char) {\color{white}\scshape\bfseries\arabic{ABCD}};
            \fi
        \fi
        \stepcounter{spur}
        \pgfmathtruncatemacro{\iABCD}{\value{spur}} 
        \setcounter{ABCD}{\iABCD}
            \node[%
            anchor=base east,
