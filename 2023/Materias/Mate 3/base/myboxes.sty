\newcommand{\boxabstract}[3][fill=white]{
    \begin{tikzpicture}
        \node [abstractbox, #1] (box)
        {\begin{minipage}{.92\textwidth}
                \setlength{\parindent}{0mm} % Indentar.
                \normalfont \sffamily #3
            \end{minipage}};
        \node[abstracttitle,right=5pt,#1] at (box.north west) {\bfseries \sffamily \large #2};
        \node[draw=none, fit=(box)] {};
    \end{tikzpicture}
}%

\newenvironment{opening}[2][Inicio]{
    \begin{openbox}
        \begin{center}
            \color{rdsdark}\textbf{#1}
        \end{center}
        #2
        }{ \end{openbox}}
\newenvironment{closing}[2][Cierre]{
    \begin{closebox}
        \begin{center}\color{rdsdark}\textbf{#1}\end{center}
        #2
        }{ \end{closebox}}
\newenvironment{problemas}[1]{
    \begin{practicabox}
        \begin{center}\color{DarkOliveGreen}\fontsize{18}{18}\selectfont\bbfamily Problemas\end{center}
        #1
        }{ \end{practicabox}}
\newenvironment{critico}[2][Piensa y se cr\'itico]{
    \begin{criticobox}
        \begin{center}\color{OliveDrab}\textbf{#1}\end{center}
        #2
        }{ \end{criticobox}}
\newenvironment{important}[3][\textwidth]{
    \noindent\begin{minipage}{#1}
